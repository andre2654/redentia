{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    },
    "moduleResolution": "node",
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/tailwindcss",
      "@nuxt/auto-imports"
    ]
  },
  "files": ["@types/**/*.d.ts"]
}
